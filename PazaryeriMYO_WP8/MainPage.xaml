                <!--Single line list with text wrapping-->
            </phone:PanoramaItem>

            <!--Panorama item two-->
            <phone:PanoramaItem Header="Tarihçe" Foreground="{StaticResource PhoneSemitransparentBrush}" FontWeight="Bold">
                <ScrollViewer HorizontalAlignment="Left" VerticalAlignment="Top" d:IsLocked="True">


                    <TextBlock TextWrapping="Wrap" Text="Meslek Yüksekokulumuz, Yükseköğretim Kurumunun 14.02.1994 Tarih ve 94.5.332 sayılı kararları gereği 1994-1995 Eğitim-Öğretim yılında Bilgisayar Programcılığı, Bilgisayarlı Muhasebe ve Vergi Uygulamaları ve Tekstil Baskı Programlarıyla birlikte Dumlupınar Üniversitesi bünyesinde kurularak Eğitim-Öğretime başlamıştır. Daha sonra yıllar itibariyle bölüm sayısı ve öğrenci sayısı artmıştır.                                         Meslek Yüksekokulumuz 29.05.2007 tarih 26536 sayılı Resmi Gazetede yayımlanarak yürürlüğe giren 5662 sayılı kanunla kurulan Bilecik Üniversitesine bağlanarak, Eğitim Öğretim faaliyetlerine devam etmektedir. Meslek Yüksekokulumuz 2010-2011 Eğitim Öğretim yılında 1 programda normal öğretim ve ikinci öğretim, 8 programda da normal öğretim ile eğitim-öğretime devam etmektedir. Yüksekokulumuzda 20 Akademik, 7 İdari, 3 Özel Güvenlik ve 3 Temizlik (Özel) elemanı olmak üzere toplam  33  kişi görev yapmaktadır."/>


                </ScrollViewer>

            </phone:PanoramaItem>

            <phone:PanoramaItem Header="Harita PMYO" Orientation="Horizontal" Foreground="{StaticResource PhoneSemitransparentBrush}" FontWeight="Bold" Width="426" FontSize="16">

                <my:Map  CredentialsProvider="Ah2jZTEbs6c9LcNvNYv2Ceu1sMosgTf0pXN37Lgi_55IPs1Hxd51HbUM3u9fQTZt" Mode="AerialWithLabels"  ZoomLevel="17" ZoomBarVisibility="Collapsed" Center="39.990814, 29.908512" Height="469" x:Name="map1" VerticalAlignment="Top" Margin="0,-31,-2,0" LogoVisibility="Visible" HorizontalAlignment="Left" Width="415" >
                    <HyperlinkButton x:Name="Map_Link" toolkit:TiltEffect.IsTiltEnabled="True" Content="Haritayı Daha Geniş Görmek İçin Dokunun" HorizontalAlignment="Left" Height="38" VerticalAlignment="Top" Width="442" Margin="-14,0,-13,0" FontSize="18" FontWeight="Normal" Click="Map_Link_Click">
                        <HyperlinkButton.Background>
                            <SolidColorBrush Color="Black" Opacity="0.5"/>
                        </HyperlinkButton.Background>
                    </HyperlinkButton>
                </my:Map>


            </phone:PanoramaItem>

            <phone:PanoramaItem Header="Kısayollar" Orientation="Horizontal" Foreground="{StaticResource PhoneSemitransparentBrush}" FontWeight="Bold" Width="781" RenderTransformOrigin="0.461,0.9">

                <StackPanel Margin="14,4,-2,0" Orientation="Vertical" VerticalAlignment="Top">
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Width="741">
                        <toolkit:HubTile x:Name="HT_OgrIsleri" toolkit:TiltEffect.IsTiltEnabled="True" Foreground="Black"  Title="Öğrenci İşleri" Message="Öğrenci Bilgi Sistemine Giriş Yapabilirsiniz" Source="hub.png" Margin="12,0,0,0" HorizontalAlignment="Left" FontWeight="Normal" Opacity="0.6" FontSize="10" Background="#FFFEFEFE" Tap="HT_OgrIsleri_Tap"/>
                        <toolkit:HubTile x:Name="HT_tlfNo" toolkit:TiltEffect.IsTiltEnabled="True" Foreground="Black"  Title="Telefon Rehberi" Message="Okulumuzun Telefon Numaraları" Source="hub.png" Margin="12,0,0,0" HorizontalAlignment="Left" FontWeight="Normal" Opacity="0.6" FontSize="10" Background="#FFFEFEFE" Tap="HT_tlfNo_Tap"/>
                        <toolkit:HubTile x:Name="HT_YemekM" toolkit:TiltEffect.IsTiltEnabled="True" Foreground="Black"  Title="Yemek Menüsü" Message="Yemek Menüsüne Bakınız" Source="hub.png" Margin="12,0,0,0" HorizontalAlignment="Left" FontWeight="Normal" Opacity="0.6" FontSize="10" Background="#FFFEFEFE" Tap="HT_YemekM_Tap"/>
                        <toolkit:HubTile x:Name="HT_Iletisim" toolkit:TiltEffect.IsTiltEnabled="True" Foreground="Black"  Title="İletişim" Message="Okulumuzun İletişim Bölümüne Bakınız" Source="hub.png" Margin="12,0,0,0" HorizontalAlignment="Left" FontWeight="Normal" Opacity="0.6" FontSize="10" Background="#FFFEFEFE" Tap="HT_Iletisim_Tap"/>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Margin="0,12,0,0" Width="741">
                        <toolkit:HubTile x:Name="HT_AkTakvim" toolkit:TiltEffect.IsTiltEnabled="True" Foreground="Black"  Title="Akademik Takvim" Message="Akademik Takvime Bakınız" Source="hub.png" Margin="12,0,0,0" HorizontalAlignment="Left" FontWeight="Normal" Opacity="0.6" FontSize="10" Background="#FFFEFEFE" Tap="HT_AkTakvim_Tap"/>
                        <toolkit:HubTile x:Name="HT_FotoGaleri" toolkit:TiltEffect.IsTiltEnabled="True" Foreground="Black"  Title="Foto Galeri" Message="Fotoğraf Galerisine Bakınız" Source="hub.png" Margin="12,0,0,0" HorizontalAlignment="Left" FontWeight="Normal" Opacity="0.6" FontSize="10" Background="#FFFEFEFE" Tap="HT_FotoGaleri_Tap"/>
                        <toolkit:HubTile x:Name="HT_AkPersonel" toolkit:TiltEffect.IsTiltEnabled="True" Foreground="Black"  Title="Personellerimiz " Message="Akademik Personelimiz" Source="hub.png" Margin="12,0,0,0" HorizontalAlignment="Left" FontWeight="Normal" Opacity="0.6" FontSize="10" Background="#FFFEFEFE" Tap="HT_AkPersonel_Tap"/>
                        <toolkit:HubTile x:Name="HT_BilecikUni" toolkit:TiltEffect.IsTiltEnabled="True" Foreground="Black"  Title="Bilecik Şeyh Edebali Üni" Message="Bilecik Şeyh Edebali Üniversitesi Anasayfa" Source="hub.png" Margin="12,0,0,0" HorizontalAlignment="Left" FontWeight="Normal" Opacity="0.6" FontSize="10" Background="#FFFEFEFE" Tap="HT_BilecikUni_Tap"/>
                    </StackPanel>
