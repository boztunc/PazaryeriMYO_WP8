            <phone:PanoramaItem Header="Müdürümüz" Foreground="{StaticResource PhoneSemitransparentBrush}" FontWeight="Bold">

                <Grid Height="215" Margin="160,0,117,0" Width="112">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="61*"/>
                        <ColumnDefinition Width="51*"/>
                        <ColumnDefinition Width="9*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock TextWrapping="Wrap" Text="Yrd.Doç.Dr. Faruk AKIN" FontSize="24" Foreground="#FF8D2020" Margin="-182,-156,1,322" Grid.ColumnSpan="3"/>
                    <Image Margin="-182,-107,-143,-32" Grid.ColumnSpan="3" Source="/mdr.png"/>
                    <Button toolkit:TiltEffect.IsTiltEnabled="True" Content="Yönetimi Görmek İçin Dokunun" Foreground="#FF162304" Click="Button_Click_1" Margin="-182,247,-143,-122" Grid.ColumnSpan="3">
                        <Button.Background>
                            <SolidColorBrush Color="#FF9E4848" Opacity="0.5"/>
                        </Button.Background>
                    </Button>
                </Grid>



